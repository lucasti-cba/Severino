<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Severino.Views.IndexPage"
             xmlns:controls="clr-namespace:Severino.ContentViews" 
             xmlns:vm="clr-namespace:Severino.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:IndexViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#fdfdfd</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>


        <ScrollView >
            <Grid >
                <Grid.RowDefinitions >
                    <RowDefinition  Height="100"/>
                    <RowDefinition />
                </Grid.RowDefinitions >
                <CarouselView   x:Name="ListServices" Grid.Row="0"  FlowDirection="LeftToRight" >
                    
                </CarouselView>
            </Grid>

        </ScrollView>
    </Grid>

</ContentPage>
